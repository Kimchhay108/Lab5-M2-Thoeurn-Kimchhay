<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="primarybutton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    <style name="secondaryButton">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    <style name="primaryTittle">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Spinner categories array -->
    <string-array name="expense_categories">
        <item>@string/category_food</item>
        <item>@string/category_transport</item>
        <item>@string/category_shopping</item>
        <item>@string/category_entertainment</item>
        <item>@string/category_other</item>
    </string-array>

</resources>